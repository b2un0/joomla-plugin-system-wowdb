<?xml version="1.0" encoding="utf-8"?>
<!-- @Version $Id$ -->
<extension version="2.5" type="plugin" group="system" method="upgrade">
    <name>System - WoWDB</name>
    <author>Branko Wilhelm</author>
    <creationDate>Apr 2013</creationDate>
    <copyright>Copyright (C) 2013 Branko Wilhelm. All rights reserved.</copyright>
    <license>GNU General Public License v3</license>
    <authorEmail>bw@z-index.net</authorEmail>
    <authorUrl>www.z-index.net</authorUrl>
    <version>@SVN_REVISION@</version>
    <description>include WoWDB Javascript</description>
    <files>
        <filename plugin="wowdb">wowdb.php</filename>
        <filename>index.html</filename>
    </files>
	<config>
        <fields name="params">
            <fieldset name="basic">
                <field type="radio" name="jquery" default="1" label="Include jQuery">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				 <field type="radio" name="jquery_noconflict" default="1" label="jQuery noConflict">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
                <field type="text" name="jquery_branch" filter="float" default="1.8" label="jQuery Branch" />
            </fieldset>
        </fields>
    </config>
    <updateservers>
		<server type="extension" priority="1" name="WoWDB">http://www.z-index.net/en/joomla/wowdb/updatestream.xml</server>
	</updateservers>
</extension>